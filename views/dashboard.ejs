<html>

<head>
  <title>Dashboard</title>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.1.0/css/bootstrap.min.css">
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.0/umd/popper.min.js"></script>
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.1.0/js/bootstrap.min.js"></script>
  <!-- For DataTables -->
  <script type="text/javascript" charset="utf8"
    src="https://cdn.datatables.net/1.10.16/js/jquery.dataTables.js"></script>

	<link rel="stylesheet" type="text/css" href="css/util.css">
	<link rel="stylesheet" type="text/css" href="css/main.css">
	<link rel="stylesheet" type="text/css" href="css/style.css">
</head>

<body>
	<div class="limiter">
		<a href="logout">Logout</a>
		<center>
			<h1>Profile page</h1>
		</center>
		<hr />
		<center>
			<h2>Hi <%=user.name%>
			</h2> Your Email Id is <%=user.email%>
		</center>
	</div>



  <div class="container-fluid">
	<div class="row">
		<% response.forEach(output=> { %>
			<div className=' col-sm-2 card' style="margin-right: 0.2em; width:16em">
				<img class="card-img-top"  style="width: 100%; height:350px" src=<%= output.image%> alt="Card image cap" ></img>
					<div class="card-body">
							<h5 class="card-text">Name: <%= output.title %></h5>
							<p class="card-text">Rating:</p>
							<button href="/select" id="<%=output._id %>" class="btn btn-primary select ">View</button>
					</div>
			</div>
			<% }); %>
	</div>
  </div>
	
		<hr>	

	
		<% if(user.role==='admin'){ %>
			<div class="container">
				<div class="row">
					<div class="col-sm-4 curve">
						<form class="validate-form" action="/postCart" method="POST">
							<span class="login100-form-title p-b-26">
								Add List
							</span>
	
							<div class="wrap-input100 validate-input" data-validate="Valid email is: a@b.c">
								<input class="input100" type="number" name="id">
								<span class="focus-input100" data-placeholder="Id"></span>
							</div>
	
							<div class="wrap-input100 validate-input">
								<input class="input100" type="text" name="product">
								<span class="focus-input100" data-placeholder="product"></span>
							</div>
	
							<div class="wrap-input100 validate-input">
								<input class="input100" type="number" name="data">
								<span class="focus-input100" data-placeholder="data"></span>
							</div>
	
							<div class="wrap-input100 validate-input">
								<input class="input100" type="number" name="price">
								<span class="focus-input100" data-placeholder="price"></span>
							</div>
	
							<div class="container-login100-form-btn">
								<div class="wrap-login100-form-btn">
									<div class="login100-form-bgbtn"></div>
									<button class="login100-form-btn" type="submit">
										Add List
									</button>
								</div>
							</div>
						</form>
					</div>
	
	
					<div class="offset-md-3 col-sm-4 curve">
						<form class="validate-form" action="/addUser" method="POST">
							<span class="login100-form-title p-b-26">
								Add User
							</span>
	
							<div class="wrap-input100">
								<input class="input100" type="text" name="name">
								<span class="focus-input100" data-placeholder="Name"></span>
							</div>
	
							<div class="wrap-input100 validate-input" data-validate="Valid email is: a@b.c">
								<input class="input100" type="text" name="email">
								<span class="focus-input100" data-placeholder="Email"></span>
							</div>
	
							<div class="wrap-input100 validate-input" data-validate="Enter password">
								<span class="btn-show-pass">
									<i class="zmdi zmdi-eye"></i>
								</span>
								<input class="input100" type="password" name="password">
								<span class="focus-input100" data-placeholder="Password"></span>
							</div>
	
							<div class="validate-input">
								<select name="role" id="role">
									<option value="admin">Admin</option>
									<option value="user">User</option>
								  </select>
							</div>
	
	
							<div class="container-login100-form-btn">
								<div class="wrap-login100-form-btn">
									<div class="login100-form-bgbtn"></div>
									<button class="login100-form-btn" type="submit">
										Add User
									</button>
								</div>
							</div>
						</form>
					</div>
				</div>
		</div> 

		<hr>

		<div class="container" >

				<h1>User List</h1>
			<table class="table table-bordered" id="myTable" style="margin-bottom: 12px;">
				<thead>
					<tr>
						<th>Name</th>
						<th>Email</th>
						<th>Role</th>
					</tr>
				</thead>
				<tbody>
					<% userList.forEach(output=> { %>
						<tr>
							<td>
								<%= output.name %>
							</td>
							<td>
								<%= output.email %>
							</td>
							<td>
								<%= output.role %>
							</td>
							
						</tr>
						<% }); %>
	
				</tbody>
			</table>
	
		</div>	


<hr>


		  <% }
		  else{ %>  
			<div></div>
		 <% } %>


		


	


      <!--===============================================================================================-->
      <script src="vendor/jquery/jquery-3.2.1.min.js"></script>
      <!--===============================================================================================-->
      <script src="vendor/animsition/js/animsition.min.js"></script>
      <!--===============================================================================================-->
      <script src="vendor/bootstrap/js/popper.js"></script>
      <script src="vendor/bootstrap/js/bootstrap.min.js"></script>
      <!--===============================================================================================-->
      <script src="vendor/select2/select2.min.js"></script>
      <!--===============================================================================================-->
      <script src="vendor/daterangepicker/moment.min.js"></script>
      <script src="vendor/daterangepicker/daterangepicker.js"></script>
      <!--===============================================================================================-->
      <script src="vendor/countdowntime/countdowntime.js"></script>
      <!--===============================================================================================-->
      <script type="text/javascript" src="../js/action.js"></script>
      <script type="text/javascript" src="../js/update.js"></script>
</body>

</html>